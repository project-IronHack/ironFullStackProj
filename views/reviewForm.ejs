           
<% if (typeof(errorMessage) != "undefined") { %>
      <div class="error-message"><%= errorMessage %></div>
    <% } %>
  </div>


  <div class="container">
      <div class="row">
          <h2>Hello <%= user.displayName %>!</h2>
          <p>Please rate your last experience with Us.</p>
         <table width="100%" border="0">
         <div class="col-md-9 col-md-offset-0">
          <tr><td width="77%">
          <div class="">
              <form class="form-horizontal" action="/reviews/new" id="new-review" method="post">
            <fieldset>
      
              <!-- Name input-->
              <div class="form-group">
                <label class="col-md-3 control-label" for="name"></label>
                <div class="col-md-9">
                  <input id="sitterName" name="name" type="text" placeholder="Sitter Name" class="form-control">
                </div>
              </div>
      
          
              <!-- Message body -->
              <div class="form-group">
                <label class="col-md-3 control-label" for="message">Your message</label>
                <div class="col-md-9">
                  <textarea class="form-control" id="messageBody" name="message" placeholder="Please enter your feedback here..." rows="5"></textarea>
                </div>
              </div>
  
  
              <!-- Rating -->
              <div class="form-group">
                <label class="col-md-3 control-label" for="message">Your rating</label>
                <div class="col-md-9">
                    <div>
                      <img class="responsive" src="" alt="happy face">                 
                      </div>
                </div>
              </div>
      </td>
      <td align="center" valign="top" width="23%">
              <!-- Form actions -->
              <div class="form-group">
                <div class="col-md-12 text-center">
                  <button type="submit" class="btn btn-primary btn-md">Submit</button>
                  <button type="reset" class="btn btn-default btn-md">Clear</button>
                </div>
              </div>
            </fieldset>
            </form>
          </div>
      </div>
      </td>
      </tr>
      </table>
  </div>
  
