<div class="bodyForm">
    <!-- Card -->
    <div class="row">
       <div class="col-md-6 col-md-offset-3">
          <div class="card">
             <!-- Card body -->
             <div class="card-body">
                <!-- Default form subscription -->
                <form action="/users/<%= user._id %>/edit" method="POST" id="editform" enctype="multipart/form-data">
                   <p class="h4 text-center py-4"></p>
                   <!-- Default name -->
                   <label for="defaultFormCardNameEx" class="grey-text font-weight-light">Your Name</label>
                   <input type="text" id="defaultFormCardNameEx" class="form-control" placeholder="<%= user.displayName%>">
                   <br>
                   <!-- Default pic upload -->
                   <label class="grey-text font-weight-light">New Pic</label>
                   <input class="form-control" type="file" name="img">
                   <div class="text-center py-4 mt-3">
                      <button class="btn btn-danger" type="submit">Send</button>
                   </div>
                </form><!-- End of Default form  -->
             </div><!-- end of Card body -->
          </div><!--end of  Card -->
       </div><!-- end of column md6-->
    </div><!-- end of row-->
 </div><!-- end of bodyForm -->