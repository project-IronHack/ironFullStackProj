<div id="main-profile">
        <div id="topbar">
            <% if (user) { %>
          <li class="icons home">
              <a href="/">
            <img src="images/house.png">Home</a>
        </li>
        <% } %>
        <li class="icons logout">
            <a href="/">
          <img src="images/logout.png">Logout</a>
        </li>
        
        <li class="icons chat">
          <img src="images/chat.png" id="myBtn">
        </li>
          </div>
        
          <!-- The Modal -->
         <div id="myModal" class="modal">
             <!-- Modal content -->
          <div class="modal-content">
              <span class="close">&times;</span>
              <p>Some text in the Modal..</p>
            </div>
          </div>
          
          
          <div id="user-container">
            <div id="content" class="clearfix">
              <h1>Username Dashboard</h1>
        
              <nav id="profiletabs">
                <ul class="clearfix">
                  <li><a href="#booking">Bookings</a></li>
                  <li><a href="#activity" class="sel">Activity</a></li>
                  <li><a href="#awards">Awards</a></li>
                  <li><a href="#settings">Settings</a></li>
                  <li><a href="#review">Review</a></li>
                  <li><a href="#review">Sitters</a></li>
                </ul>
              </nav>
              
              <section id="booking" class="hidden">
                <h4>Bookings:</h4>
                
                <p class="transations">24.02 - Booked a walking with  <strong>someusername</strong></p>
                
                <p class="transations">01.01 - Booked a sitting with  <strong>someusername</strong></p>
                
                
               
              </section>
        
              <section id="activity">
                  <h4>Most recent actions:</h4>
                
                  <p class="transations">@10:15PM - Submitted a news article</p>
                  
                  <p class="transations">@9:50PM - Submitted a news article</p>
                  
                  <p class="transations">@8:15PM - Posted a comment</p>
                  
                  <p class="transations">@4:30PM - Added <strong>someusername</strong> as a friend</p>
                  
                  <p class="transations">@12:30PM - Submitted a news article</p>
                
              </section>
              
              <section id="awards" class="hidden">
                <h4>Points Collected</h4>
                
                <ul id="award" class="clearfix">
                  <li><a href="#"><img src="images/avatar.png" width="22" height="22"> 300 likes</a></li>
                  <li><a href="#"><img src="images/avatar.png" width="22" height="22"> 123 likes</a></li>
                  <li><a href="#"><img src="images/avatar.png" width="22" height="22"> 89 likes</a></li>
                </ul>
              </section>
              
              <section id="settings" class="hidden">
                <h4>Edit your settings:</h4>
                
                <p class="setting"><span>E-mail Address <img src="images/edit.png" alt="*Edit*"></span> lolno@gmail.com</p>
                
                <p class="setting"><span>Change Password <img src="images/edit.png" alt="*Edit*"></span> Public</p>
                
                <p class="setting"><span>News Letter Frequency <img src="images/edit.png" alt="*Edit*"></span> Weekly</p>
                
                <p class="setting"><span>Cancel Account<img src="images/edit.png" alt="*Edit*"></span> None</p>
              </section>
        
              <section id="review" class="hidden">
                  <h4>Reviews:</h4>
                <form action="/new" method="POST" id="new-review">
                  <div class="rating">
                      <span>☆</span><span>☆</span><span>☆</span><span>☆</span><span>☆</span>
                  </div>
                <label for="reviewText">Were you happy with the service provided? </label>
                <input type="text" name="reviewText" maxlength="200"
                  placeholder="Write about your experience" >
                <label for="rating">Rate service: </label>
                <input type="text" name="rating">
          
                <button class="button blue fright">Save review</button>
              </form>
        </section>

        <section id="sitters" class="hidden">
            <h4>some text</h4>
            
        </section>
            </div><!-- end #content -->
          </div><!-- end #user-container -->
          <div id="userphoto">
            <img src="images/slide3.jpeg" alt="avatar user"></div>
        </div><!-- end #main -->
